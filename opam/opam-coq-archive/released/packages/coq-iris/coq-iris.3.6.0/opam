  "logpath:iris.prelude"
  "logpath:iris.algebra"
  "logpath:iris.si_logic"
  "logpath:iris.bi"
  "logpath:iris.proofmode"
  "logpath:iris.base_logic"
  "logpath:iris.program_logic"
]

depends: [
  "coq" { (>= "8.13" & < "8.17~") | (= "dev") }
  "coq-stdpp" { (= "1.7.0") | (= "dev") }
]

build: ["./make-package" "iris" "-j%{jobs}%"]
install: ["./make-package" "iris" "install"]

