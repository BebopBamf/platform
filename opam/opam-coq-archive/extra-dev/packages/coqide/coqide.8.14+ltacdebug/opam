opam-version: "2.0"
maintainer: "coqdev@inria.fr"
authors: "The Coq development team, INRIA, CNRS, and contributors."
homepage: "https://coq.inria.fr/"
bug-reports: "https://github.com/coq/coq/issues"
dev-repo: "git+https://github.com/coq/coq.git"
license: "LGPL-2.1-only"
synopsis: "IDE of the Coq formal proof management system"
description: """
This version of CoqIDE is a preview release of an interactive debugger for Ltac in CoqIDE.
"""

depends: [
  "coq" {= version}
  "ocamlfind" {build}
  "dune" {>= "2.5.1"}
  "conf-findutils" {build}
  "lablgtk3-sourceview3"
  "conf-adwaita-icon-theme"
]
build: [
  [
    "./configure"
    "-configdir" "%{lib}%/coq/config"
    "-prefix" prefix
    "-mandir" man
    "-docdir" doc
    "-libdir" "%{lib}%/coq"
    "-datadir" "%{share}%/coq"
    "-native-compiler" "yes" {coq-native:installed} "no" {!coq-native:installed}
  ]
  [ "dune" "build" "-p" name "-j" jobs ]
]

url {
  src: "https://github.com/jfehrle/coq/archive/8.14+debugger_preview.tar.gz"
  checksum: "sha512=0c91ee6b2e633aedb5fb19d67081b8bf6bd322e973eb8113e3356978b00c2f2557aff935c91f361a98da1e21a1faa5b17c4c6377739a196bdf03233eae0550a2"
